<div class="index">
  <nav class="navbar navbar-light bg-light">
    <p>Mister Cocktail</p>
    <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-info" %>
  </nav>
  <div class="container">
    <h1 class="text-center">Our cocktails</h1>
    <div class="cards">

      <% @cocktails.each do |cocktail| %>

        <% if cocktail.image.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.image.key) %>)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "https://images.unsplash.com/photo-1509233725247-49e657c54213?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60" %>)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>

      <% end %> 
 
    </div>
  </div>
</div>
