<div class="index">  
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "MisterCocktail", root_path, class: "navbar-brand" %>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto mt-3">
        <li class="mr-3">
          <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
            <div class="search-form-control form-group">
              <input class="form-control string required" type="text" name="search[query]" id="search_query" />
              <button name="button" type="submit" class="btn btn-flat">
                <i class="fas fa-search"></i> Search
              </button>
            </div>
          </form>
        </li>
        <li class="nav-item mt-2">
          <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-info" %>
        </li>
      </ul>
    </div>
  </div>

  <div class="container">
    <h1 class="text-center">Our cocktails</h1>
    <div class="cards">

      <% @cocktails.each do |cocktail| %>

        <% if cocktail.image.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.image.key) %>)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "https://images.unsplash.com/photo-1509233725247-49e657c54213?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60" %>)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>

      <% end %> 
 
    </div>
  </div>
</div>
