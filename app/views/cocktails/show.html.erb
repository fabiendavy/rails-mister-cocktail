<div class="show">
  
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= if @cocktail.image.attached? ? cl_image_path(@cocktail.image.key) : "https://images.unsplash.com/photo-1509233725247-49e657c54213?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60" %>)">
    <h1 class="text-center d-flex justify-content-center"><%= @cocktail.name %></h1>
    <div class="cocktails-link cocktail-btn">
      <%= link_to "Cocktails", root_path %>
      <%= link_to "Add new cocktail", new_cocktail_path %>
    </div>
  </div>

  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="d-flex justify-content-around w-100">
        <div class="col-4 dose-description w-100 m-4">
          <% @cocktail.doses.each do |dose| %>
            <div class="dose d-flex justify-content-between">
              <%= dose.description %> of <%= dose.ingredient.name %>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Sure?" } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="col-8 dose-form w-100 m-4">
          <%= simple_form_for([@cocktail, @dose]) do |f| %>
            <%= f.input :description %>
            <%= f.association :ingredient %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
        </div>
      
      </div>
    </div>
  </div>


</div>
